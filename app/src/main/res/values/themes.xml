<resources xmlns:tools="http://schemas.android.com/tools">



    <!-- Base application theme. -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_bright</item>
        <item name="colorPrimaryVariant">@color/greyish_blue</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">#65AF9B</item>
        <item name="colorOnSecondary">#E4E2E2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:solidColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:fillColor" tools:targetApi="l">?attr/colorOnPrimary</item>

        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:strokeColor" tools:targetApi="l">?attr/colorOnSecondary</item>






    </style>

    <style name="Theme.Login.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Login.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Login.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>