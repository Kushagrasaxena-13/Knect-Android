            android:name=".Comment_Activity"
            android:theme="@style/Theme.Login.NoActionBar" />
        <activity
            android:name=".Postit"
            android:theme="@style/Theme.Login.NoActionBar" />
        <activity
            android:name=".MainActivity2"
            android:theme="@style/Theme.Login.NoActionBar" />
