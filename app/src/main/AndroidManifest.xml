            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Change_dp"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Profile"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
